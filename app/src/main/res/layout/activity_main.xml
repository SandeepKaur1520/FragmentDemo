<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:id="@+id/fragmentview"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My App"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:onClick="myappclick"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentview1"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginLeft="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My App"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:onClick="myappclick1"
                android:layout_gravity="center"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bfragment1"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:onClick="myclick"
            android:text="open fragment 1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bfragment2"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:onClick="myclick1"
            android:text="open fragment 2"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>


